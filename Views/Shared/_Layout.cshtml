<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="RochaBlogs offers numerous tips and trick to learn to code as well as best practices and design patterns associated with software engineering" />
        <meta name="author" content="Kevin Rocha" />
        <meta name="keywords" content="RochaBlogs, web development, software engineering, coding, tips and tricks, learn to code, JavaScript, C#, Dot Net, .NET, .Net core" />
        <title>@ViewData["Title"] - RochaBlogs</title>
        <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
        <!-- Font Awesome icons (free version)-->
        <script src="//use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
        <!-- Google fonts-->
        <link href="//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
        <link href="//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="~/css/styles.css" rel="stylesheet" type="text/css"/>
        <link href="~/css/custom.css" rel="stylesheet" type="text/css"/>
        @await RenderSectionAsync("Head", required: false)
    </head>
    <body>
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Rocha Blogs </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto py-4 py-lg-0">
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="Index">Home1</a></li>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="About">About2</a></li>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Home" asp-action="Contact">Contact3</a></li>
                        @if(User.IsInRole("Administrator"))
                        {
                            <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Blogs" asp-action="Index">Manage Blogs</a></li> 
                            <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Posts" asp-action="Index">Manage Posts</a></li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url(@ViewData["HeaderImage"])">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>@ViewData["MainText"]</h1>
                            <span class="subheading">@ViewData["SubText"]</span>
                            <form asp-action="SearchIndex" asp-controller="Posts">
                                <div class="input-group mt-5">
                                    <input type="text" name="SearchTerm" class="form-control" placeholder="Search Term">
                                    <div class="input-group-append">
                                        <button class="btn btn-warning btn-block btn-sm" type="submit">Search</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        
        @RenderBody()
        
        <!-- Footer-->
        <footer class="border-top">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <ul class="list-inline text-center">
                           @*  <li class="list-inline-item">
                                <a href="">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-linkedin-in fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li> *@
                            @* <li class="list-inline-item">
                                <a href="">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li> *@
                           <!-- <li class="list-inline-item">
                                <a href="https://codepen.io/">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-codepen fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                            -->
                        </ul>
                        <div class="small text-center text-muted fst-italic">Copyright &copy; RochaBlogs <span id="footerYear"></span></div>
                    </div>
                </div>
            </div>
        </footer>
       
        <!-- JQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <!-- JQuery UI-->
        <script
			  src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"
			  integrity="sha256-eTyxS0rkjpLEo16uXTS0uVCS4815lc40K2iVpWDvdSY="
			  crossorigin="anonymous"></script>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Sweet Alert 2 JS-->
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <!-- Summernote responsive image fix -->
        <script>
            $(document).ready(function () {
                $("img").addClass("img-fluid");
                $("img").parent("span").css("width", "auto");
                $("img").parent("span").css("height", "auto");
            });
        </script>
        <script type="text/javascript" src="~/js/scripts.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
